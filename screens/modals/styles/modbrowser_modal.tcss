ModalScreen {
    align: center middle;
}

.hidden {
    display: none;
}

.modbrowser.grid {
    grid-size: 2 3;
    grid-rows: auto 1fr auto;
    border: panel $accent-lighten-1 80%;
}

.modbrowser.grid.top {
    grid-size: 6 2;
    grid-columns: 11 16 1fr 14 8 18;
    grid-rows: 3 3;
    column-span: 2;
    border: none;
}

.modbrowser.group {
    height: 100%;
    width: 100%;
    border: round $accent-darken-1;
}

.modbrowser.group.detail {
    grid-size: 2 7;
    grid-rows: 1 auto 1 auto 1 1fr auto;
    grid-columns: 14 1fr;
}

.modbrowser.description-scroll {
    column-span: 2;
}

.modbrowser.text.description {
    width: 1fr;
    height: auto;
}

.modbrowser.grid.dependencies {
    grid-size: 1 1;
    grid-rows: 1fr;
    grid-columns: 1fr;
    border: none;
    column-span: 2;
}

.modbrowser.text {
    content-align: left middle;
    height: 1fr;
    width: 1fr;
    padding-left: 1;
}

.modbrowser.text.wide {
    column-span: 2;
}

.modbrowser.button {
    margin: 0 1;
    width: 18;
}

.modbrowser.select {
    width: auto;
}

#modbrowser-search {
    column-span: 2;
}

#modbrowser-mcversion-label {
    content-align: right middle;
}

#modbrowser-description-label {
    column-span: 2;
}

#modbrowser-install-button {
    column-span: 2;
}
