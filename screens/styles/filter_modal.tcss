ModalScreen {
    align: center middle;
}

#filter-grid {
    grid-rows: 3;
    width: auto;
    max-width: 50%;
    max-height: 80%;
    border: panel $accent-lighten-1 80%;
}

.filter.label {
    padding-left: 1;
    width: 1fr;
    height: 1fr;
    content-align: left middle;
}

.filter.button {
    width: auto;
    height: 3;
    margin: 1 0 0 1;
}
